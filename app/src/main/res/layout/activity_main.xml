<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >

    <data>
<!--        <variable-->
<!--            name="showTv"-->
<!--            type="boolean" />-->
        <variable
            name="user"
            type="com.example.a02databinding.User" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout

        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
        <FrameLayout
            android:id="@+id/fragmentContainer"
            android:layout_width="match_parent"
            android:layout_height="300dp">

        </FrameLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{user.name}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{user.age}"
            android:layout_marginTop="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{user.phone}"
            android:layout_marginTop="80dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@{user.loginName}"
            app:layout_constraintTop_toBottomOf="@id/phone"
            />

        <Button
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/phone"
            android:layout_marginTop="70dp"
            android:onClick="@{user::onClickLogin}"
            android:text="可观察字段演示(bind 事件处理)"
            android:layout_height="50dp"/>
        <Button
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/phone"
            android:layout_marginTop="130dp"
            android:onClick="login"
            android:text="可观察字段演示"
            android:layout_height="50dp"/>
        <Button
            android:id="@+id/viewModelBtn"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/phone"
            android:layout_marginTop="200dp"
            android:text="viewmodel livedata lifecycle"
            android:layout_height="50dp"/>




    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>